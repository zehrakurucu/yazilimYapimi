
@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Satıcı</th>
                <th>miktar</th>
                <th>Fiyat</th>
                @if (Session["yetki"] != null)
                {
                    <th>Satın al</th>
                }
                
            </tr>
        </thead>
        <tbody>

            @foreach (var item in ViewBag.urunList)
            {
            <tr>
                <th>@item.urunadi</th>
                <th>@item.satici</th>
                <th>@item.miktar</th>
                <th>@item.fiyat</th>
                @if (Session["yetki"] != null)
                {
            <th>
                <a class="btn btn-primary btn-sm justify-content-end" href="#">Satın Al</a>
            </th>
                }
                
            </tr>
            }


</table>

</div>

