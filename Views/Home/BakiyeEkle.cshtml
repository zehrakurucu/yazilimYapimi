
@{
    ViewBag.Title = "BakiyeEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form class="needs-validation" action="/Home/bakiyeEkle" method="post">
    <div class="row">
        <div class="col-lg-6">
            <label>Miktar</label>
            <input type="text" class="form-control" id="bakiye" name="bakiye" placeholder="" required>
            <div class="invalid-feedback">
                Valid last name is required.
            </div>
        </div>
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-6">
                    <label>Yükleme Türü</label>
                    <input type="radio" class="form-check-input" id="exampleCheck1" name="cins" value="TL" checked="checked">&nbsp;&nbsp;&nbsp;&nbsp;TL&nbsp;&nbsp;
                    <input type="radio" class="form-check-input" id="exampleCheck2" name="cins" value="USD">&nbsp;&nbsp;&nbsp;&nbsp;Dolar&nbsp;&nbsp;
                    <input type="radio" class="form-check-input" id="exampleCheck3" name="cins" value="EUR">&nbsp;&nbsp;&nbsp;&nbsp;Euro&nbsp;&nbsp;
                    <input type="radio" class="form-check-input" id="exampleCheck4" name="cins" value="GBP">&nbsp;&nbsp;&nbsp;&nbsp;Sterlin
                </div>
            </div>
        </div>
    </div>
        <hr class="mb-12">
    <div class="row">
        <div class="col-lg-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Bakiye ekle</button>
        </div>
        
    </div>
</form>