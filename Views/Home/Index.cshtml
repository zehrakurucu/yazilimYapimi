@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-6 ">
        <h4 class="mb-3">Giriş Yap</h4>
        <form class="needs-validation" novalidate action="/Home/Login" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="firstName">Kullanıcı adı</label>
                    <input type="text" class="form-control" id="kad" name="kad" placeholder="" required>
                    <div class="invalid-feedback">
                        Valid first name is required.
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="lastName">Şifre</label>
                    <input type="text" class="form-control" id="sifre" name="sifre"  placeholder=""required>
                    <div class="invalid-feedback">
                        Valid last name is required.
                    </div>
                </div>
            </div>
            <hr class="mb-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Giriş yap</button>
            <span>@ViewBag.hata</span>
        </form>

    </div>

    <div class="col-md-6">
        <h4 class="mb-3">Kayıt ol</h4>
        <form class="needs-validation " action="/Home/Register" method="post" novalidate>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="firstName">İsim</label>
                    <input type="text" class="form-control" id="firstName" name="ad"  placeholder="" required>
                    <div class="invalid-feedback">
                        Valid first name is required.
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="lastName">Soy isim</label>
                    <input type="text" class="form-control" id="lastName" name="soyad" placeholder=""  required>
                    <div class="invalid-feedback">
                        Valid last name is required.
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="username">Kullanıcı adı</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"></span>
                    </div>
                    <input type="text" class="form-control" id="username" name="kad" placeholder="Username" required>
                    <div class="invalid-feedback" style="width: 100%;">
                        Your username is required.
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="address">Şifre</label>
                <input type="text" class="form-control" id="address" name="sifre" placeholder="sifre" required>
                <div class="invalid-feedback">
                    Please enter your shipping address.
                </div>
            </div>

            <div class="mb-3">
                <label for="lastName">TC Kimlik</label>
                <input type="text" class="form-control" id="tcno" name="tc" placeholder=""  required>
                <div class="invalid-feedback">
                    Valid last name is required.
                </div>
            </div>

            <div class="mb-3">
                <label for="lastName">Telefon</label>
                <input type="text" class="form-control" id="tcno" name="tel" placeholder="53*******" value="" required>
                <div class="invalid-feedback">
                    Valid last name is required.
                </div>
            </div>

            <div class="mb-3">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="mail" placeholder="you@example.com">
                <div class="invalid-feedback">
                    Please enter a valid email address for shipping updates.
                </div>
            </div>


            <div class="mb-3">
                <label for="address2">Adres</label>
                <input type="text" class="form-control" id="addres" name="adres" placeholder="adres">
            </div>


            <h4 class="mb-3">Hesap türü seçin:</h4>

            <div class="d-block my-3">
                <div class="custom-control custom-radio">
                    <input id="credit" name="yetki" value="1"  type="radio" class="custom-control-input" checked required>
                    <label class="custom-control-label" for="credit">Satıcı</label>
                </div>
                <div class="custom-control custom-radio">
                    <input id="debit" name="yetki" value="0" type="radio" class="custom-control-input" required>
                    <label class="custom-control-label" for="debit">Alıcı</label>
                </div>
            </div>
            <hr class="mb-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Kayıt ol</button>
        </form>

    </div>
</div>